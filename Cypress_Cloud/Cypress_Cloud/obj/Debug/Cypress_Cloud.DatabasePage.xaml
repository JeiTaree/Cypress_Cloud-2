<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cypress_Cloud.DatabasePage">
  <StackLayout Padding="60" BackgroundColor="White">
    <Image Source="logo.png" Scale="0.1" />
    
    <Button
      Clicked="SaveData_Button_Clicked"
      HorizontalOptions="FillAndExpand"
      BackgroundColor="#800000"
      TextColor="White"
      Font="Bold, Large"
      Text="Save Data" />

    <Button
     Clicked="ReadData_Button_Clicked"
     HorizontalOptions="FillAndExpand"
     BackgroundColor="#800000"
     TextColor="White"
     Font="Bold, Large"
     Text="Read Database" />
  </StackLayout>
</ContentPage>