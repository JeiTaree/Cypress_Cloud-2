<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cypress_Cloud.MainPage">
  <StackLayout Padding="60" BackgroundColor="White">
    <Image Source="logo.png" Scale="0.1" />

    <Button
      Clicked="First_Button_Clicked"
      HorizontalOptions="FillAndExpand"
      BackgroundColor="#800000"
      TextColor="White"
      Font="Bold, Large"
      Text="About Us" />

    <Button
     Clicked="Second_Button_Clicked"
     HorizontalOptions="FillAndExpand"
     BackgroundColor="#800000"
     TextColor="White"
     Font="Bold, Large"
     Text="Class Details" />

    <Button
      Clicked="Third_Button_Clicked"
      HorizontalOptions="FillAndExpand"
      BackgroundColor="#800000"
      TextColor="White"
      Font="Bold, Large"
      Text="Tutor" />


    <Button
      Clicked="Fourth_Button_Clicked"
      HorizontalOptions="FillAndExpand"
      BackgroundColor="#800000"
      TextColor="White"
      Font="Bold, Large"
      Text="Events" />

    <Button
      Clicked="Fifth_Button_Clicked"
      HorizontalOptions="FillAndExpand"
      BackgroundColor="#800000"
      TextColor="White"
      Font="Bold, Large"
      Text="Survey" />

    <Button
      Clicked="Sixth_Button_Clicked"
      HorizontalOptions="FillAndExpand"
      BackgroundColor="#800000"
      TextColor="White"
      Font="Bold, Large"
      Text="Contact Us" />

    <Button
  Clicked="Seventh_Button_Clicked"
  HorizontalOptions="FillAndExpand"
  BackgroundColor="#800000"
  TextColor="White"
  Font="Bold, Large"
  Text="Database Functionalities" />
    
  </StackLayout>
  </ContentPage>